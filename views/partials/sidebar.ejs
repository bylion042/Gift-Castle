<!-- funtion to add for activness  -->
<script>
    const navLinks = document.querySelectorAll('.nav-link');
    const spinner = document.getElementById('loading-spinner');

    navLinks.forEach(link => {
        const currentPath = window.location.pathname;

        // Add active class for the current page
        if (link.getAttribute('href') === currentPath) {
            link.classList.add('active');
        } else {
            link.classList.remove('active');
        }

        // Show spinner when a link is clicked
        link.addEventListener('click', function (e) {
            // Prevent the default link click behavior
            e.preventDefault();

            // Show the loading spinner
            spinner.style.display = 'flex';

            // Wait for the page to load and hide the spinner
            const href = e.target.closest('a').getAttribute('href');
            window.location.href = href;  // Navigate to the clicked page
        });
    });

    // Ensure the spinner is hidden once the page is loaded
    window.addEventListener('load', function() {
        spinner.style.display = 'none';
    });
</script>






